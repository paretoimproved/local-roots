        "drizzle-orm": "^0.28.6",
        "hono": "^4.0.0",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/node": "^20.10.6",
        "@vitest/coverage-v8": "^2.1.8",
        "@vitest/ui": "^2.1.8",
        "bun-types": "^1.0.20",
        "supertest": "^7.0.0",
        "@types/supertest": "^6.0.2",
        "typescript": "^5.3.3",
        "vitest": "^2.1.8"
